<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ProyUser{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/principal.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/images/UserProject-Logo.png') }}" />
    </head>
    <body>
        <header class="navbar navbar-inverse navbar-fixed-top " role="banner" >
            <div  class="container ">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">ProyUser</a>
                </div>
                <nav class="navbar-collapse ">
                    <ul class="nav navbar-nav">
                        <li {% block activehome %}{% endblock %}><a href="{{ path('principal') }}">Home</a></li>
                        <li {% block activemarcaciones %}{% endblock %}><a href="{{ path('rms_marcaciones_principal') }}">Marcaciones</a></li>
                        <li {% block activedirectorio %}{% endblock %}><a href="{{ path('directorio_principal') }}">Directorio</a></li>
                        <li {% block activealmuerzo %}{% endblock %}><a href="{{ path('reservacion_principal') }}">Almuerzos</a></li>
                        <li {% block activedoc %}{% endblock %}><a href="{{ path('prestamos_principal') }}">Documentaci√≥n</a></li>
                    </ul>
                    <div class="nav navbar-nav navbar-right" >
                        <div  class=" btn-group" >
                            <a class="user"  href="#"><img src="{{ asset('bundles/usuario/images/directorio/Trabajadores/'~app.user.fotoNombre) }}" class="img-circle">{{app.user.nombre |title}}</a>
                            <a class=" user  dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('perfil_principal') }}"><span class="glyphicon glyphicon-user"></span>Mi perfil</a></li>
                                <li><a href="{{ path('autenticacion_delogueo') }}"><span class="glyphicon glyphicon-off"></span> Salir</a></li>

                            </ul>
                        </div>
                    </div>
                </nav>
                </div>
        </header>

        {% block body %}

        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('assets/jquery/jquery-1.11.1.js') }}"></script>
            <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>







