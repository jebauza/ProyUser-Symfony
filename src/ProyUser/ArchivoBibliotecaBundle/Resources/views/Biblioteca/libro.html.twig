<div class="col-xs-12" >
    <div>
        <form id="bucsar-libro" class="form-inline" method="post" action="{{ path('biblioteca_busqueda_libros') }}">
            <fieldset>
                {% set titulo,autor,pais,idioma,editorial,categoria,tema = "","","","","","",""  %}
                {% if arrCamposLibro.titulo is defined %}
                    {% set titulo = arrCamposLibro.titulo %}
                {% endif %}
                {% if arrCamposLibro.autor is defined %}
                    {% set autor = arrCamposLibro.autor %}
                {% endif %}
                {% if arrCamposLibro.nacion is defined %}
                    {% set pais = arrCamposLibro.nacion %}
                {% endif %}
                {% if arrCamposLibro.idioma is defined %}
                    {% set idioma = arrCamposLibro.idioma %}
                {% endif %}
                {% if arrCamposLibro.editorial is defined %}
                    {% set editorial = arrCamposLibro.editorial %}
                {% endif %}
                {% if arrCamposLibro.categoria is defined %}
                    {% set categoria = arrCamposLibro.categoria %}
                {% endif %}
                {% if arrCamposLibro.tema is defined %}
                    {% set tema = arrCamposLibro.tema %}
                {% endif %}
                {% if arrCamposLibro.sistema_const is defined %}
                    {% set sistContructivo = arrCamposLibro.sistema_const %}
                {% endif %}

            <label for="titulo">Titulo:</label>
            <input type="text"  class="form-control input-sm" id="titulo" name="_titulo" value="{{ titulo }}"/>
            <label for="titulo">Autor:</label>
            <input type="text"  class="form-control input-sm" id="autor" name="_autor" value="{{ autor }}"/>
            <label for="titulo">Pais:</label>
            <input type="text"  class="form-control input-sm" id="pais" name="_pais" value="{{ pais }}"/>
            <label for="titulo">Idioma:</label>
            <input type="text"  class="form-control input-sm" id="idioma" name="_idioma" value="{{ idioma }}"/>
            <label for="titulo">Editorial:</label>
            <input type="text"  class="form-control input-sm" id="editorial" name="_editorial" value="{{ editorial }}"/>
            <label for="titulo">Categoria:</label>
            <input type="text"  class="form-control input-sm" id="categoria" name="_categoria" value="{{ categoria }}"/>
            <label for="titulo">Tema:</label>
            <input type="text"  class="form-control input-sm" id="tema" name="_tema" value="{{ tema }}"/>
            <button type="submit" class="btn btn-default pull-right"><span class="glyphicon glyphicon-search"></span>Buscar</button>
                </fieldset>
        </form>
    </div>
</div>

